<div data-mm-role="ios-node-picture-config ios-modal" class="ios-modal" style="display:none">
	<img class="ios-modal-close" data-mm-role="modal-close" src="<%=settings.static_image_host%>/ios_icon_close.svg"/>
	<div class="ios-modal-title">Tap the dashed area to select an image</div>
	<div class="ios-modal-content" data-mm-role="ios-modal-content">
       <div class="control-group">
        <div class="controls">
          <div data-mm-role="drop-zone" class="file-drop-zone">
			  <img data-mm-role="img-preview"/>
		  </div>
		  <input type="file" class name="selectfile"/>
        </div>
      </div>
      <div class="control-group" data-mm-role="attribs">
        <div class="controls">
          <select name="position">
            <option value="top">Above text</option>
            <option value="center">Behind text (centered)</option>
            <option value="bottom">Below text</option>
            <option value="left">Left of text</option>
            <option value="right">Right of text</option>
          </select>
        </div>
      </div>
      <div class="control-group" data-mm-role="attribs">
        <div class="controls">
			<input type="text" style="width:50px" name="width" placeholder="width"/>&nbsp;x&nbsp;<input type="text" style="width:50px" name="height" placeholder="height"/>
			<input type="checkbox" name="keepratio" checked="true" /> Keep proportions
        </div>
      </div>
      <div class="modal-footer">
        <a tabstop="1" href="#" class="btn btn-primary" data-mm-role="confirm" data-dismiss="modal">Save</a>
        <a tabstop="2" href="#" class="btn btn-danger" data-mm-role="clear" data-dismiss="modal">Remove</a>
        <a tabstop="3" href="#" class="btn" data-dismiss="modal">Cancel</a>
      </div>

	</div>
</div>