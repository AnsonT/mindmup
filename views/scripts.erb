<script>
  <%= erb :require_js %>
  function loadScripts(success, failure) {
    requirejs.config({
      shim: {
          'bootstrap': ['jquery'],
          'jquery-ui': ['jquery'],
          'jquery.mousewheel': ['jquery'],
          'jquery.colorPicker': ['jquery'],
          'jquery.hammer': ['jquery'],
          'jquery.hotkeys': ['jquery']
      },
      baseUrl: "/",

      paths: {
        "jquery": '<%=  "#{settings.static_host}/jquery-2.0.2.min" %>',
        "kinetic": '<%=  "#{settings.static_host}/kinetic-v4.5.4.min" %>',
        "bootstrap": '<%=  "#{settings.static_host}/bootstrap-2.3.1.min" %>',
        "underscore": '<%=  "#{settings.static_host}/underscore-1.4.4.min" %>',
        "jquery-ui": '<%=  "#{settings.static_host}/jquery-ui-1.10.0.custom.min" %>',
        "jquery.mousewheel": '<%=  "#{settings.static_host}/jquery.mousewheel-3.1.3" %>',
        "color": '<%=  "#{settings.static_host}/color-0.4.1.min" %>',
        "jquery.colorPicker": '<%=  "#{settings.static_host}/jquery.colorPicker.min" %>',
        "jquery.hammer": '<%=  "#{settings.static_host}/jquery.hammer.min" %>',
        "jquery.hotkeys": '<%=  "#{settings.static_host}/jquery.hotkeys" %>'
      },
      
      waitSeconds: 60 <% if development? then %> ,
      urlArgs: "version=" + (new Date()).getTime()
    <% end %>
    });
    requirejs(
      ["jquery", "underscore"],
      function () {
        window.mmtimestamp.log('basic scripts loaded');
        requirejs(
          ["bootstrap", "jquery-ui", "jquery.mousewheel", "color", "jquery.colorPicker", "kinetic", "jquery.hammer", "jquery.hotkeys", "mm"],
          function () {
            window.mmtimestamp.log('remote scripts loaded');
            requirejs(
              <%= join_scripts [
                "mapjs-compiled",
                "class-caching-widget",
                "navigation",
                "maps",
                "activity-log",
                "alert",
                "modal-confirmation-widget",
                "map-controller",
                "s3-adapter",
                "google-drive-adapter",
                "offline-adapter",
                "feedback",
                "vote",
                "welcome-message",
                "floating-toolbar",
                "bookmark",
                "title-update-widget",
                "share-widget",
                "share-email-widget",
                "background-upload-widget",
                "file-reader-upload-widget",
                "import-widget",
                "toggle-class-widget",
                "url-shortener-widget",
                "save-widget",
                "remote-export-widget",
                "google-drive-open-widget",
                "local-storage-open-widget",
                "gold-storage-open-widget",
                "command-line-widget",
                "freemind-import",
                "tabular-export",
                "bootstrap-wysiwyg",
                "attachment-editor-widget",
                "auto-save",
                "auto-save-widget",
                "file-system-map-source",
                "retriable-map-source-decorator",
                "score",
                "extensions",
                "map-status-widget",
                "key-actions-widget",
                "context-menu-widget",
                "embed-map-widget",
                "gold-license-entry-widget",
                "icon-editor-widget",
                "main"
              ] %>,
              success,
              failure
            );
          },
          failure
        );
      },
      failure
    );
  }
</script>
